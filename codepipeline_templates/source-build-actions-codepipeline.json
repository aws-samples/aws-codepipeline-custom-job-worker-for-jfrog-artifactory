{
    "pipeline": {
        "roleArn": "arn:aws:iam::<YOUR-ACCOUNT-NUMBER-HERE>:role/AWS-CodePipeline-Service",
        "stages": [
            {
                "name": "Source",
                "actions": [
                    {
                        "inputArtifacts": [],
                        "name": "Source",
                        "actionTypeId": {
                            "category": "Source",
                            "owner": "AWS",
                            "version": "1",
                            "provider": "CodeCommit"
                        },
                        "outputArtifacts": [
                            {
                                "name": "MyApp1"
                            }
                        ],
                        "configuration": {
                            "PollForSourceChanges": "true",
                            "BranchName": "master",
                            "RepositoryName": "<CODE-REPOSITORY-SOURCE-NAME-HERE>"
                        },
                        "runOrder": 1
                    }
                ]
            },
            {
                "name": "CodeBuild",
                "actions": [
                    {
                        "inputArtifacts": [
                            {
                                "name": "MyApp1"
                            }
                        ],
                        "name": "MyAction",
                        "actionTypeId": {
                            "category": "Build",
                            "owner": "AWS",
                            "version": "1",
                            "provider": "CodeBuild"
                        },
                        "outputArtifacts": [
                            {
                                "name": "Output"
                            }
                        ],
                        "configuration": {
                            "ProjectName": "<CODEBUILD-PROJECT-NAME>"
                        },
                        "runOrder": 1
                    }
                ]
            }
        ],
        "artifactStore": {
            "type": "S3",
            "location": "<AWS-ACCOUNT-NUMBER>-codepipelineartifact-us-west-2"
        },
        "name": "<NAME-OF-PIPELINE>",
        "version": 1
    }
}
